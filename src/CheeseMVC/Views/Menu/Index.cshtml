@model IEnumerable<CheeseMVC.Models.Menu>


<h3>Menu</h3>
<br />


<ul>
    @foreach (var menu in Model)
    {
        <li>
            <a asp-controller="Menu"
               asp-action="ViewMenu"
               asp-route-id="@menu.ID">@menu.Name</a>
        </li>
    }
</ul>

<p align="center"><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>