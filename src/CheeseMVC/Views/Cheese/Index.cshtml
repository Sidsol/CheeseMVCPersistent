@model List<CheeseMVC.Models.Cheese>

<h3>Cheeses</h3>
<br />

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <td>Type</td>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
            <td>@cheese.Category.Name</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}
    <div>
        <p align="center"><a asp-controller="Cheese" asp-action="Add">Add</a> | <a asp-controller="Cheese" asp-action="Remove">Remove</a></p>
    </div>   