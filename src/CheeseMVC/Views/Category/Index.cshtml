@model List<CheeseMVC.Models.CheeseCategory>
@{
    ViewData["Title"] = "Index";
}

<h3>Categories</h3>
<br />

<ul>
    @foreach (var category in Model)
    {
    <li>
        <a asp-controller="Cheese"
           asp-action="Category"
           asp-route-id="@category.ID">@category.Name</a>
    </li>
    }
</ul>



<p align="center"><a asp-controller="Category" asp-action="Add">Add Category</a></p>